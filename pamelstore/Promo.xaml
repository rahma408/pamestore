<Window x:Class="pamelstore.Promo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pamelstore"
        mc:Ignorable="d"
        Title="Promo" Height="450" Width="358">
    <Grid HorizontalAlignment="Left" Width="320">
        <ListBox x:Name="listBoxDaftarPromo" Margin="32,48,0,48" MouseDoubleClick="onlistBoxDaftarPromoClicked">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />

                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding diskon}" TextAlignment="Left" FontSize="16"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="PROMO" HorizontalAlignment="Left" Margin="135,22,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="26" Width="82"/>
    </Grid>
</Window>

